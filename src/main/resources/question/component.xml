<component name="question" type="synapse/template">
    <subComponents>
        <component name="getQuestionsByUserIds">
            <file>getQuestionsByUserIds.xml</file>
            <description>Get all questions specified by one or more user ids</description>
        </component>
        <component name="addQuestion">
            <file>addQuestion.xml</file>
            <description>Add a new question</description>
        </component>
        <component name="editQuestionById">
            <file>editQuestionById.xml</file>
            <description>Edit a question specified by an id</description>
        </component>
        <component name="deleteQuestionById">
            <file>deleteQuestionById.xml</file>
            <description>Delete a question specified by an id</description>
        </component>
        <component name="upvoteQuestionById">
            <file>upvoteQuestionById.xml</file>
            <description>Upvote a question specified by an id</description>
        </component>
        <component name="downvoteQuestionById">
            <file>downvoteQuestionById.xml</file>
            <description>Downvote a question specified by an id</description>
        </component>
        <component name="getQuestionsWithNoAnswers">
            <file>getQuestionsWithNoAnswers.xml</file>
            <description>Get all questions haven't answered yet in an site</description>
        </component>
    </subComponents>
</component>