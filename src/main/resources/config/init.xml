<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="apiUrl" description="The URL of the Stack Exchange REST API" />
    <parameter name="accessToken" description="OAuth2 Access Token" />
    <parameter name="key"
               description="Should Pass this as key when making requests against to receive a higher request quota." />
	<sequence>
        <property name="uri.var.apiUrl" expression="$func:apiUrl" />
        <!-- If API URL is not specified, set the defaults -->
        <filter source="boolean(get-property('uri.var.apiUrl'))" regex="false">
            <then>
                <property name="uri.var.apiUrl" value="https://api.stackexchange.com/2.2" />
            </then>
        </filter>
        <property name="uri.var.accessToken" expression="$func:accessToken" />
        <property name="uri.var.key" expression="$func:key" />
	</sequence>
</template>