<template xmlns="http://ws.apache.org/ns/synapse" name="getMe">
    <sequence>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="{uri.var.apiDomain}/{uri.var.apiVersion}/me?site={uri.var.site}&amp;access_token={uri.var.accessToken}&amp;key={uri.var.key}"/>
            </endpoint>
        </call>
        <!-- Forces response decompression -->
        <class name="org.wso2.carbon.connector.DumbDecompressMediator"/>
    </sequence>
</template>
